<strong><%= @post.likes.count %> Me gusta</strong>
<% like = Like.find_by(user_id: current_user&.id, post_id: @post.id) %>
<% if like.nil? %>
  <%= button_to "Me gusta", likes_path, params: { like: { post_id: @post.id } }, method: :post, class: "btn btn-primary" %>
<% else %>
  <%= button_to "No me gusta", like_path(like), method: :delete, class: "btn btn-primary" %>
<% end %>
